# Server configuration
PORT=3000
NODE_ENV=production

# Docker Compose configuration
DOCKER_COMPOSE_PATH=/usr/bin/docker-compose
BASE_COMPOSE_FILE=/path/to/docker-compose.yml
ENVIRONMENTS_DIR=/path/to/pr-env-api/data/environments

# Tailscale configuration
TAILSCALE_DOMAIN=your-tailscale-domain.ts.net
TAILSCALE_CONFIG_PATH=/path/to/tailscale/config.json

# Database
DB_PATH=/path/to/pr-env-api/data/pr-environments.db

# Logging
LOG_LEVEL=info
